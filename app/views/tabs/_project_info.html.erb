<div class= "project-info">
  
  <div class= "project-box">
    <h2><%= project.name %></h2>
    <h3><%= project.url %></h3>
  </div>

  <div class="settings">  
    <%= link_to 'Nova aba', new_tab_path(project), class: "button" %>
    <%= link_to(
      "- excluir projeto",
      project, method: :delete,
      data: {confirm: 'Deseja mesmo excluir?'}, class: "button"
    ) %>
  </div>

</div>