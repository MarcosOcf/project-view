<div class= "wrapper">
  <div class= 'header'>
    <div class= 'title'>
      <h1>Taxonomista</h1> 
    </div> 
  </div>

  <%= form_for(@project) do |l| %>

    <div class= 'new-project'>
      
      <%= l.label 'Nome do projeto' %>
      
      <div class= 'title-name-entry'>
        <%= l.text_field :name %>
      </div>
    
      <div class= 'link-project'>
        <div class= 'link-project-lb'>
          <%= l.label 'URL do projeto'%>
        </div>
        <div class= 'link-project-url'>
          <%= l.text_field :url %>
        </div>
      </div>
      
      <div class= 'button-submit'>
        <%= l.submit 'Cadastrar Projeto' %>
      </div>
    </div>

  <% end %>

  <div class= "back-home">
      <%= link_to 'Cancelar', projects_path %>
  </div>

  <div class= 'project-error'>
    <%= @project.errors.full_messages.first if @project.errors.any? %>
  </div>
</div>