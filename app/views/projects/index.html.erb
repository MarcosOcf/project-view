<div class= "header">

  <div class= "title">
    <h1> Project View </h1>
  </div>

  <div class= "new-project">
    <%= link_to 'Cadastrar projeto', new_project_path %>
  </div>

</div>
<% if @projects.count != 0 %>

<div class= "projects">

  <% @projects.each do |project| %>

    <div class= "project">

      <div class= "project-name">
        <h1><%= project[:name] %></h1>
      </div>

      <div class= "project-url">
        <h2>url:<%= project[:url]%></h2>
      </div>

      <div class= "project-destroy">
        <%= link_to "Excluir", project, method: :delete, data: {confirm: 'Deseja mesmo excluir?'} %>
      </div>

    </div>

  <% end %>

</div>
<% else %>

  <div class= "project">
    <h1> nenhum projeto cadastrado </h1>
  </div>

<% end %>

