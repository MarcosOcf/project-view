<div class= "header">
  <div class= "title">
    <h1><%= link_to 'Taxonomista', projects_path %></h1>
  </div>
</div>

<div class= "new-project">
  <%= link_to "+ adicionar projeto", new_project_path %>
</div>

<% if @projects.count != 0 %>

  <div class= "projects">

    <% @projects.reverse_each do |project| %>
     
        <div class= "project">
          <div class= "project-name">
            <%= link_to "#{project.name}", project %>
          </div>

          <div class= 'project-status'>

            <% if project.cloned %>
              
              <div class= "project-sucess">
          
              </div>

            <% elsif !project.cloned and project.can_be_cloned %>

              <div class= "project-waiting">
                
              </div>

            <% else %>

              <div class= "project-error">
                
              </div>

            <% end %>   
          </div>
          

          <div class= "project-url">
            <%= link_to project[:url], project[:url]%></p>
          </div>


        </div>
    <% end %>

  </div>

<% else %>

    <div class= "no-project">
      <h1> Nenhum projeto cadastrado </h1>
    </div>

<% end %>