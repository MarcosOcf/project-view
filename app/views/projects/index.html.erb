<div class= "wrapper">
  <div class= "header">
    <div class= "title">
      <h1> Taxonomista </h1>
    </div>
  </div>

  <div class= "new-project">
    <%= link_to "+ adicionar projeto", new_project_path %>
  </div>

  <% if @projects.count != 0 %>

    <div class= "projects">

      <% @projects.each do |project| %>

        <div class= "project">

          <div class= "project-name">
            <%= link_to "#{project.name}", project %>
          </div>

          <div class= "project-url">
            <p><%=project[:url]%></p>
          </div>

        </div>

        <div class= "project-destroy">
          <%# link_to "Excluir", project, method: :delete, data: {confirm: 'Deseja mesmo excluir?'} %>
        </div>

      <% end %>

    </div>

  <% else %>

      <div class= "no-project">
        <h1> Nenhum projeto cadastrado </h1>
      </div>

  <% end %>

</div>